'use client';
import React, { useState, useEffect } from 'react';
import { supabase } from '@/lib/supabaseClient';

export default function AuthenticCertificatePage() {
    const [data, setData] = useState(null);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        async function loadProfile() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) { setLoading(false); return; }
            const { data: progress } = await supabase.from('user_progress').select('*').eq('user_id', user.id).order('updated_at', { ascending: false }).limit(1);
            if (progress?.[0]) {
                setData({ 
                    ...progress[0], 
                    savings: progress[0].last_score >= 15 ? 15 : 0,
                    verifyURL: `http://localhost:3001/verify/${progress[0].id}`,
                    transcript: [
                        { module: "Analyse Technique de Chantier", status: "Validé (OCR)", lang: "FR" },
                        { module: "Advanced Maintenance Protocol", status: "Validé (Adaptive)", lang: "EN" }
                    ]
                });
            }
            setLoading(false);
        }
        loadProfile();
    }, []);

    if (loading) return <div style={{padding:'50px', textAlign:'center'}}>Génération du certificat sécurisé...</div>;

    return (
        <div style={{ minHeight: '100vh', background: '#f1f5f9', padding: '20px', fontFamily: 'serif' }}>
            <style>{`
                @media print {
                    @page { size: landscape; margin: 0; }
                    body { margin: 0; background: #fff !important; }
                    .no-print { display: none !important; }
                    .cert-wrapper { width: 100vw !important; height: 100vh !important; display: flex !important; justify-content: center !important; align-items: center !important; background: #fff !important; }
                    .certificate-frame { width: 92% !important; height: 88% !important; border: 15px double #1e40af !important; padding: 40px !important; box-shadow: none !important; }
                }
            `}</style>

            <header className="no-print" style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', maxWidth: '1100px', margin: '0 auto 20px auto', fontFamily: 'sans-serif' }}>
                <div style={{ display: 'flex', alignItems: 'center', gap: '15px' }}>
                    <div style={{ fontSize: '24px' }}>⚙️</div>
                    <span style={{ fontWeight: 'bold', color: '#1e40af' }}>VERIFICATION ENGINE ACTIVE</span>
                </div>
                <button onClick={() => window.print()} style={{ padding: '12px 30px', background: '#1e40af', color: '#fff', border: 'none', borderRadius: '30px', cursor: 'pointer', fontWeight: 'bold' }}>Imprimer Certificat Vérifié</button>
            </header>

            <div className="cert-wrapper">
                <div className="certificate-frame" style={{ background: '#fff', padding: '60px', border: '12px double #1e40af', textAlign: 'center', position: 'relative', maxWidth: '1050px', margin: '0 auto' }}>
                    
                    {/* TOP LOGO */}
                    <img src="/new-logo.png" alt="Cobel" style={{ height: '70px', marginBottom: '20px' }} onError={(e) => { e.currentTarget.src = 'https://via.placeholder.com/200x70?text=COBEL+BUSINESS'; }} />

                    <div style={{ color: '#1e40af', fontSize: '12px', letterSpacing: '6px', fontWeight: 'bold' }}>CERTIFICATION OFFICIELLE DE COMPÉTENCE</div>
                    <h1 style={{ fontSize: '48px', margin: '10px 0', color: '#0f172a' }}>Maîtrise Professionnelle</h1>
                    
                    <h2 style={{ color: '#1e40af', fontSize: '30px', margin: '20px 0' }}>{data?.course_id || "Professional Training (LMS)"}</h2>

                    <div style={{ display: 'grid', gridTemplateColumns: '1fr 200px 1fr', gap: '20px', alignItems: 'center', marginTop: '30px' }}>
                        {/* LEFT: DATA */}
                        <div style={{ textAlign: 'left', fontSize: '14px' }}>
                            <p><strong>Score:</strong> {data?.last_score}/20</p>
                            <p><strong>Temps Optimisé:</strong> -{data?.savings} Jours</p>
                        </div>

                        {/* CENTER: QR CODE FOR PROVENANCE */}
                        <div style={{ textAlign: 'center' }}>
                            <img 
                                src={`https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(data?.verifyURL || '')}`} 
                                alt="Verification QR" 
                                style={{ border: '2px solid #1e40af', padding: '5px', borderRadius: '4px' }}
                            />
                            <p style={{ fontSize: '8px', marginTop: '5px', color: '#64748b' }}>SCANNER POUR VÉRIFIER L'AUTHENTICITÉ</p>
                        </div>

                        {/* RIGHT: TRANSCRIPT PREVIEW */}
                        <div style={{ textAlign: 'right', fontSize: '12px' }}>
                            {data?.transcript.map((item, idx) => (
                                <p key={idx} style={{ margin: '2px 0' }}>{item.module}: <span style={{ color: '#16a34a' }}>{item.status}</span></p>
                            ))}
                        </div>
                    </div>

                    <div style={{ marginTop: '50px', display: 'flex', justifyContent: 'space-between', alignItems: 'flex-end' }}>
                        <div style={{ textAlign: 'center', width: '250px', borderTop: '1px solid #000', paddingTop: '10px' }}>
                            <p style={{ fontSize: '10px' }}>Directeur de Formation</p>
                        </div>
                        <div style={{ textAlign: 'center', width: '250px', borderTop: '1px solid #000', paddingTop: '10px' }}>
                            <p style={{ fontSize: '10px' }}>Sceau d'Authenticité Cobel AI</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    );
}