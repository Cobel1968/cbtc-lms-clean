'use client';
import React, { useState, useEffect } from 'react';
import { supabase } from '@/lib/supabaseClient';

export default function SymmetricCertificatePage() {
    const [data, setData] = useState(null);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        async function loadProfile() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) { setLoading(false); return; }
            const { data: progress } = await supabase.from('user_progress').select('*').eq('user_id', user.id).order('updated_at', { ascending: false }).limit(1);
            if (progress?.[0]) {
                setData({ 
                    ...progress[0], 
                    savings: progress[0].last_score >= 15 ? 15 : 0,
                    verifyURL: `http://localhost:3001/verify/${progress[0].id}`,
                    transcript: [
                        { module: "Analyse Technique de Chantier", status: "Validé (OCR)", lang: "FR" },
                        { module: "Advanced Maintenance Protocol", status: "Validé (Adaptive)", lang: "EN" }
                    ]
                });
            }
            setLoading(false);
        }
        loadProfile();
    }, []);

    if (loading) return <div style={{padding:'50px', textAlign:'center'}}>Finalisation du sceau d'authenticité...</div>;

    return (
        <div style={{ minHeight: '100vh', background: '#f1f5f9', padding: '20px', fontFamily: 'serif' }}>
            <style>{`
                @media print {
                    @page { size: landscape; margin: 0; }
                    body { margin: 0; background: #fff !important; }
                    .no-print { display: none !important; }
                    .cert-wrapper { width: 100vw !important; height: 100vh !important; display: flex !important; justify-content: center !important; align-items: center !important; }
                    .certificate-frame { width: 92% !important; height: 88% !important; border: 12px double #1e40af !important; padding: 40px !important; box-shadow: none !important; position: relative !important; }
                }
            `}</style>

            <header className="no-print" style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', maxWidth: '1100px', margin: '0 auto 20px auto', fontFamily: 'sans-serif' }}>
                <div style={{ display: 'flex', alignItems: 'center', gap: '15px' }}>
                    <div style={{ fontSize: '24px' }}></div>
                    <span style={{ fontWeight: 'bold', color: '#1e40af' }}>SYMMETRIC VERIFICATION ACTIVE</span>
                </div>
                <button onClick={() => window.print()} style={{ padding: '12px 30px', background: '#1e40af', color: '#fff', border: 'none', borderRadius: '30px', cursor: 'pointer', fontWeight: 'bold' }}>Imprimer Certificat Officiel</button>
            </header>

            <div className="cert-wrapper">
                <div className="certificate-frame" style={{ background: '#fff', padding: '50px', border: '12px double #1e40af', textAlign: 'center', maxWidth: '1050px', margin: '0 auto' }}>
                    
                    {/* LOGO SECTION */}
                    <img src="/new-logo.png" alt="Cobel" style={{ height: '70px', marginBottom: '15px' }} onError={(e) => { e.currentTarget.src = 'https://via.placeholder.com/200x70?text=COBEL+BUSINESS'; }} />

                    <div style={{ color: '#1e40af', fontSize: '11px', letterSpacing: '6px', fontWeight: 'bold' }}>CERTIFICATION OFFICIELLE DE COMPÉTENCE TECHNIQUE</div>
                    <h1 style={{ fontSize: '42px', margin: '10px 0', color: '#0f172a' }}>Maîtrise Professionnelle</h1>
                    <h2 style={{ color: '#1e40af', fontSize: '26px', margin: '15px 0' }}>{data?.course_id || "Vocational Business Training"}</h2>

                    {/* DATA & TRANSCRIPT GRID */}
                    <div style={{ display: 'grid', gridTemplateColumns: '1fr 1fr', gap: '40px', marginTop: '30px', textAlign: 'left', borderTop: '1px solid #eee', paddingTop: '20px' }}>
                        <div style={{ fontSize: '14px' }}>
                            <p><strong>Score Global:</strong> {data?.last_score}/20</p>
                            <p><strong>Optimisation Temporelle:</strong> -{data?.savings} Jours</p>
                            <p><strong>Date:</strong> {new Date().toLocaleDateString('fr-FR')}</p>
                        </div>
                        <div style={{ fontSize: '12px' }}>
                            {data?.transcript.map((item, idx) => (
                                <p key={idx} style={{ margin: '2px 0' }}>{item.module}: <span style={{ color: '#16a34a' }}>{item.status}</span></p>
                            ))}
                        </div>
                    </div>

                    {/* SIGNATURES & QR SEAL (SYMMETRIC) */}
                    <div style={{ marginTop: '60px', display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                        
                        {/* LEFT SIGNATURE */}
                        <div style={{ textAlign: 'center', width: '220px', borderTop: '1px solid #000', paddingTop: '10px' }}>
                            <p style={{ fontSize: '10px', fontWeight: 'bold' }}>Signature du Mentor</p>
                        </div>

                        {/* CENTERED QR CODE (SAME HEIGHT AS LOGO) */}
                        <div style={{ textAlign: 'center' }}>
                            <img 
                                src={`https://api.qrserver.com/v1/create-qr-code/?size=70x70&data=${encodeURIComponent(data?.verifyURL || '')}`} 
                                alt="Verification QR" 
                                style={{ border: '1px solid #1e40af', padding: '3px', height: '70px', width: '70px' }}
                            />
                            <p style={{ fontSize: '7px', marginTop: '5px', color: '#64748b' }}>VERIFICATION DIGITALE</p>
                        </div>

                        {/* RIGHT SIGNATURE */}
                        <div style={{ textAlign: 'center', width: '220px', borderTop: '1px solid #000', paddingTop: '10px' }}>
                            <p style={{ fontSize: '10px', fontWeight: 'bold' }}>Direction Cobel BTC</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    );
}