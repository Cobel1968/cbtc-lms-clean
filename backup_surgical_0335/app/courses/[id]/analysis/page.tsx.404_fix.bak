'use client';
import React, { useState } from 'react';
import { useParams } from 'next/navigation';
import { supabase } from '@/lib/supabaseClient';

export default function OCRVerifyPage() {
    const params = useParams();
    const [preview, setPreview] = useState<string | null>(null);
    const [isAnalyzing, setIsAnalyzing] = useState(false);
    const [metrics, setMetrics] = useState<any>(null);
    const [syncStatus, setSyncStatus] = useState<'idle' | 'syncing' | 'success'>('idle');

    const handleVerification = (e: React.ChangeEvent<HTMLInputElement>) => {
        const file = e.target.files?.[0];
        if (!file) return;

        setIsAnalyzing(true);
        setSyncStatus('idle');

        const reader = new FileReader();
        reader.onload = (event) => {
            setPreview(event.target?.result as string);
            
            // COBEL AI ENGINE: Extraction Simulation
            setTimeout(() => {
                setMetrics({
                    score: 18.5,
                    accuracy: 98.7,
                    terms: ["Atelier", "Maintenance", "Equipement"],
                    fluency: "Expert"
                });
                setIsAnalyzing(false);
            }, 1500);
        };
        reader.readAsDataURL(file);
    };

    const syncToDatabase = async () => {
        if (!metrics) return;
        setSyncStatus('syncing');

        // Update the student progress in Supabase
        const { error } = await supabase
            .from('user_progress')
            .upsert({ 
                course_id: params.id,
                last_score: metrics.score,
                ocr_accuracy: metrics.accuracy,
                technical_terms_mastered: metrics.terms,
                updated_at: new Date().toISOString()
            });

        if (!error) {
            setSyncStatus('success');
            // Logic for "Automated Milestone Forecasting" would trigger here
        }
    };

    return (
        <div style={{ padding: '40px', background: '#f8fafc', minHeight: '100vh', fontFamily: 'system-ui' }}>
            <h1 style={{ color: '#0f172a' }}>⚡ Digital Profile Sync</h1>
            
            <div style={{ display: 'grid', gridTemplateColumns: '1fr 1fr', gap: '30px', marginTop: '20px' }}>
                {/* PREVIEW */}
                <div style={{ background: '#0f172a', borderRadius: '16px', padding: '20px', minHeight: '400px', display: 'flex', justifyContent: 'center', alignItems: 'center' }}>
                    {preview ? <img src={preview} style={{ maxWidth: '100%', borderRadius: '8px', border: '4px solid #fff' }} /> : <p style={{color:'#475569'}}>Waiting for image...</p>}
                </div>

                {/* RESULTS & SYNC */}
                <div style={{ display: 'flex', flexDirection: 'column', gap: '20px' }}>
                    <div style={{ background: '#fff', padding: '20px', borderRadius: '12px', border: '1px solid #e2e8f0' }}>
                        <input type="file" onChange={handleVerification} accept="image/*" />
                    </div>

                    {metrics && (
                        <div style={{ background: '#fff', padding: '25px', borderRadius: '16px', border: '2px solid #16a34a' }}>
                            <h3>Resultat: {metrics.score}/20</h3>
                            <p>Précision OCR: <strong>{metrics.accuracy}%</strong></p>
                            
                            <button 
                                onClick={syncToDatabase}
                                disabled={syncStatus !== 'idle'}
                                style={{ 
                                    width: '100%', padding: '15px', marginTop: '10px',
                                    background: syncStatus === 'success' ? '#16a34a' : '#2563eb',
                                    color: 'white', border: 'none', borderRadius: '8px', cursor: 'pointer'
                                }}
                            >
                                {syncStatus === 'idle' && 'Mettre à jour mon profil digital →'}
                                {syncStatus === 'syncing' && 'Synchronisation...'}
                                {syncStatus === 'success' && '✅ Profil Mis à Jour !'}
                            </button>
                        </div>
                    )}
                </div>
            </div>
        </div>
    );
}