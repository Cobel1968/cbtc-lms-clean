'use client';
import React, { useState, useEffect } from 'react';
import { supabase } from '@/lib/supabaseClient';

export default function FinalCertificatePage() {
    const [data, setData] = useState(null);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        async function loadProfile() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) { setLoading(false); return; }
            const { data: progress } = await supabase.from('user_progress').select('*').eq('user_id', user.id).order('updated_at', { ascending: false }).limit(1);
            if (progress?.[0]) {
                setData({ ...progress[0], savings: progress[0].last_score >= 15 ? 15 : 0, isReady: progress[0].last_score >= 18 });
            }
            setLoading(false);
        }
        loadProfile();
    }, []);

    if (loading) return <div style={{padding:'50px', textAlign:'center'}}>Initialisation du certificat...</div>;

    return (
        <div className="dashboard-container" style={{ minHeight: '100vh', background: '#f8fafc', padding: '20px', fontFamily: 'serif' }}>
            <style>{`
                @media print {
                    @page { size: landscape; margin: 0; }
                    body { margin: 0; background: #fff; }
                    .no-print { display: none !important; }
                    .certificate-border { 
                        width: 90vw !important; 
                        height: 85vh !important; 
                        margin: auto !important;
                        border: 15px double #1e40af !important;
                        display: flex !important;
                        flex-direction: column !important;
                        justify-content: center !important;
                        align-items: center !important;
                    }
                }
            `}</style>

            {/* UPDATED HEADER: NEW LOGO + ENGINE ICON */}
            <header className="no-print" style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', maxWidth: '1100px', margin: '0 auto 40px auto', fontFamily: 'sans-serif' }}>
                <div style={{ display: 'flex', alignItems: 'center', gap: '20px' }}>
                    <div style={{ fontSize: '30px' }}></div> {/* Engine Icon Kept */}
                    <img src="/new-logo.png" alt="Cobel" style={{ height: '55px' }} onError={(e) => { e.currentTarget.src = 'https://via.placeholder.com/180x55?text=COBEL+BUSINESS'; }} />
                </div>
                <div style={{ textAlign: 'right' }}>
                    <h2 style={{ margin: 0, color: '#1e40af' }}>Certification Digitale</h2>
                    <p style={{ margin: 0, fontSize: '11px', color: '#64748b', fontWeight: 'bold' }}>ID PROJET: COBEL-LMS-2026</p>
                </div>
            </header>

            <main style={{ maxWidth: '1100px', margin: '0 auto' }}>
                <div className="certificate-border" style={{ background: '#fff', padding: '60px', borderRadius: '4px', border: '10px double #1e40af', textAlign: 'center', boxShadow: '0 4px 20px rgba(0,0,0,0.1)' }}>
                    <div style={{ color: '#1e40af', fontSize: '14px', letterSpacing: '4px', marginBottom: '20px', fontWeight: 'bold' }}>CERTIFICAT DE RÉUSSITE TECHNIQUE</div>
                    
                    <h1 style={{ fontSize: '48px', margin: '10px 0', color: '#0f172a' }}>Maîtrise Professionnelle</h1>
                    <p style={{ fontSize: '20px', fontStyle: 'italic', color: '#64748b' }}>Ce document atteste que l'apprenant a validé avec succès le module :</p>
                    <h2 style={{ color: '#1e40af', fontSize: '28px', margin: '20px 0' }}>{data?.course_id || "Formation Business"}</h2>
                    
                    <div style={{ margin: '40px 0', borderTop: '1px solid #e2e8f0', paddingTop: '30px' }}>
                        <p style={{ fontSize: '16px' }}><strong>Score Final :</strong> {data?.last_score}/20</p>
                        <p style={{ fontSize: '16px' }}><strong>Termes Bilingues :</strong> {data?.technical_terms_mastered?.join(', ')}</p>
                        <p style={{ fontSize: '16px', color: '#16a34a' }}><strong>Optimisation IA :</strong> {data?.savings} Jours Économisés</p>
                    </div>

                    <div style={{ display: 'flex', justifyContent: 'space-around', marginTop: '60px' }}>
                        <div style={{ textAlign: 'center', borderTop: '1px solid #000', width: '200px', paddingTop: '10px' }}>
                            <p style={{ fontSize: '12px', margin: 0 }}>Signature de l'Instructeur</p>
                        </div>
                        <div style={{ textAlign: 'center', borderTop: '1px solid #000', width: '200px', paddingTop: '10px' }}>
                            <p style={{ fontSize: '12px', margin: 0 }}>Sceau Cobel AI Engine</p>
                        </div>
                    </div>
                </div>

                <div className="no-print" style={{ textAlign: 'center', marginTop: '40px' }}>
                    <button 
                        onClick={() => window.print()}
                        style={{ padding: '15px 50px', background: '#1e40af', color: '#fff', border: 'none', borderRadius: '30px', cursor: 'pointer', fontWeight: 'bold', boxShadow: '0 10px 15px -3px rgba(30, 64, 175, 0.3)' }}
                    >
                        Imprimer le Certificat (Mode Paysage)
                    </button>
                </div>
            </main>
        </div>
    );
}